<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lodgers" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
<!--        primary color -> use in button ,text view , app component-->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#FFFFFFFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="White_Button" parent="Theme.MaterialComponents.NoActionBar">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">500dp</item>
    </style>

    <style name="Purple_Button" parent="Theme.MaterialComponents.NoActionBar">
        <item name="backgroundTint">#6E5FDE</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="elevation">100dp</item>

    </style>

    <style name="YourCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/lodgers2
        </item>
    </style>

</resources>